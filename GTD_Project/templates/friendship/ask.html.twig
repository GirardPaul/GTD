{% extends 'base.html.twig' %}

{% block title %}Demandes d'ami{% endblock %}

{% block body %}

    {% if asks == [] %}

        <h1 class="text-center">Vous n'avez aucune demande d'ami en attente</h1>

    {% else %}


        <table class="table table-responsive">

            <thead>
            <tr>
                <th class="w-25">Username</th>
                <th class="w-25">Pok√©mon favori</th>
                <th class="w-25">Genre</th>
                <th class="w-25">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for ask in asks %}
                <tr>
                    <td>{{ ask.sender.username }}</td>
                    <td>{{ ask.sender.favoritePokemon }}</td>
                    <td>{{ ask.sender.genre.label }}</td>
                    <td>
                        <a href="{{ path('ask_accept', {'id': ask.id}) }}" title="Accepter">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-check-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm9.854-2.854a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                            </svg>
                        </a>

                        <a href="{{ path('ask_delete', {'id': ask.id}) }}" title="Refuser">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-x-fill" fill="red" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6.146-2.854a.5.5 0 0 1 .708 0L14 6.293l1.146-1.147a.5.5 0 0 1 .708.708L14.707 7l1.147 1.146a.5.5 0 0 1-.708.708L14 7.707l-1.146 1.147a.5.5 0 0 1-.708-.708L13.293 7l-1.147-1.146a.5.5 0 0 1 0-.708z"/>
                            </svg>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>

    {% endif %}

{% endblock %}
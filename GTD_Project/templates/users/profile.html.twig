{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}

    <div class="row">
            <div class="col-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ user.username }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ user.genre.label }}</h6>
                        <p class="card-text">Pok√©mon favori : {{ user.favoritePokemon }}</p>
                        <a href="{{ path('edit_profile', {'id': user.id}) }}" class="btn btn-primary w-50 m-1">Editer</a>
                        <form method="post" action="{{ path('delete_profile', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                            <button class="btn btn-danger w-50 m-1">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
    </div>

{%  endblock %}